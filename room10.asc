function room_Load()
{
  player.LockView(105);
  gAction.Visible = false;
  gMaingui.Visible = false;
  Mouse.Visible = false;
}

function room_AfterFadeIn()
{
	aTomorrowtoday.Play();
	StartCutscene(eSkipESCOrRightButton);
	
	Wait(30);
	
	cTVGirl.Say("Wir unterbrechen das aktuelle Programm für eine Sondermeldung!");
	cTVGirl.Say("Wie soeben bekannt gegeben wurde...");
	cTVGirl.Say("...wird aufgrund der nicht jugendfreien Inhalte von \"Die geheimen Tagebücher der Britney B\"...");
  cTVGirl.Say("...eine Behörde zur Kontrolle von Büchern ins Leben gerufen!");
  cTVGirl.Say("...");
  cTVGirl.Say("Das Books Rating Board oder kurz BRB wird absofort...");
  cTVGirl.Say("Bücher in die Altersgruppen: Ab 0 Jahren, 6 Jahre, 13 Jahre und 17 Jahre...");
  cTVGirl.Say("unterteilen.");
  cTVGirl.Say("...");
  cTVGirl.Say("Der Bestseller von Britney B. wurde gar komplett auf den Index gesetzt und kann nun gar nicht mehr erworben werden.");
  cTVGirl.Say("...");
	cTVGirl.Say("Und nun zurück zum laufenden Programm.");
	Wait(20);
	player.UnlockView();
	player.FaceDirection(eDirUp);
	player.ChangeRoom(2);
	StopMusic();
	
	EndCutscene();
}


